# Backend .env.example
# Copy to backend/.env and adjust values.

# MongoDB (used when not running with no-mongo profile)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=resumematch_pro

# JWT (REQUIRED)
JWT_SECRET=replace-with-a-strong-random-string-at-least-32-chars
JWT_EXP_MINUTES=120

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000

# File storage
FILE_STORAGE_DIR=./storage

# Spring profile
# Use 'no-mongo' to disable MongoDB auto-configuration so the app can start without a running Mongo instance.
# Remove or change this to re-enable Mongo connections.
SPRING_PROFILES_ACTIVE=no-mongo
